<form action="/restaurants/{{restaurant._id}}/edit" method="POST">
  <h1 class="mb-1 restaurant-show-title">
    <input type="text" name="name" value="{{restaurant.name}}">
  </h1>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              類別：
            </span>
          </div>
          <input type="text" name="category" value="{{restaurant.category}}" class="form-control">
          </select>
        </div>

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-map-marker-alt pr-2"></i>
              地址：
            </span>
          </div>
          <input type="text" name="location" value="{{restaurant.location}}" class="form-control">
        </div>

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-map-marker-alt pr-2"></i>
              google map url：
            </span>
          </div>
          <input type="text" name="google_map" value="{{restaurant.google_map}}" class="form-control">
        </div>

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-mobile-alt pr-2"></i>
              電話：
            </span>
          </div>
          <input type="text" name="phone" value="{{restaurant.phone}}" class="form-control">
        </div>

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-edit pr-2"></i>
              描述：
            </span>
          </div>
          <textarea class="form-control" rows="3" name="description"
            value="{{restaurant.description}}">{{restaurant.description}}</textarea>
        </div>

        <div class="input-group mb-1 d-flex align-items-center">
          <div class="input-group-prepend">
            <span class="text-secondary">
              <i class="fas fa-link pr-2"></i>
              image url：
            </span>
          </div>
          <input type="text" name="image" value="{{restaurant.image}}" class="form-control">
        </div>

        <p class="mt-3 mb-5 text-center">
          <button type="submit" class="btn btn-info">Save Changes</button>
          <a href="/" class="btn btn-success">Back To Home Page</a>
        </p>
      </div>
    </div>
  </div>
</form>