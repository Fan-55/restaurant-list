<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱或種類" aria-label="Restaurant Name..."
            aria-describedby="search-button" required>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row mb-3">
    <div class="col">
      <form action="/restaurants" id="sort-select" method="GET" class="d-flex justify-content-end">
        <select name="sort" form="sort-select" onchange="this.form.submit()">
          <option value="" disabled selected>Sort</option>
          <option value="name_en:asc">店名：A -> Z</option>
          <option value="name_en:desc">店名：Z -> A</option>
          <option value="rating:asc">評分：高 -> 低</option>
          <option value="rating:desc">評分：低 -> 高</option>
          <option value="category:asc">種類</option>
        </select>
      </form>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-md-4">
    {{#each restaurants}}
    <div class="col">
      <div class="card mb-3">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
        </a>
        <div class="card-body p-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <h6 class="card-title mb-1">{{this.name}}</h6>
          </a>
          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>
          <span class="badge badge-pill badge-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
        <div class="card-footer d-flex justify-content-end">
          <a href="/restaurants/{{this._id}}/edit" class="btn btn-info btn-sm mr-1">Edit</a>
          <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm delete" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{#if_empty restaurants}}
  <div class="alert alert-primary" role="alert">
    Restaurant list is empty. Please add new item to the list.
  </div>
  {{/if_empty}}
</div>